<!-- Portfolio Grid -->

<section id="portfolio" class="py-0 pb-lg-4  mx-auto px-0" style="background-color:{{ section.templateBgColor ?? content_bgcolor }}">
    <div class="container-fluid col-12 col-lg-{{ (section.templateWidth ?? folio_container_width)|col_lg() }} mx-auto px-0" >
        <div id="folio"  class="row mx-auto">
        {% for pictures in section|col_imgs %}
        {% set padding_x = folio1_padding_x ?? 2 %}
        {% set padding_y = folio1_padding_y ?? 2 %}

        {% set px = 'px-' ~ padding_x ~ ' px-sm-' ~ padding_x %}
        {% if(loop.first) %}
            {% set px = 'px' ~ padding_x ~  ' ps-sm-' ~ padding_x ~ ' pe-sm-' ~ padding_x  %}
        {% endif %}
        {% if(loop.last) %}
            {% set px = 'px' ~ padding_x ~ ' ps-sm-'~ padding_x ~ ' pe-sm-' ~ padding_x  %}
        {% endif %}
		<div class="col-lg-{{ section.templateNbCol|nb_col }} col-md-{{ section.templateNbCol|nb_col }} col-12 text-center mx-auto {{ px }}" >
		        {% for picture in pictures %}
                    {% if picture.name is defined %}
                        {% if( section.template2 == '') %}
                            <img class="img-responsive col-12 py-{{padding_y}} mx-0 {{ px }}" src="{{ asset(vich_uploader_asset(picture, 'imageFile')) }}" alt="{{ 'picture' }}">      
                        {% endif %}
                        {% if( 'modale1' ==  section.template2.code) %}
                            <!-- Modale1  -->
                            <a style="color:{{ content_link_color }}" onmouseover="this.style.color='{{ content_link_hover_color }}'" onmouseout="this.style.color='{{ content_link_color }}'" class="thumbnail" href="#" data-image-id="" data-name="{{ picture.name }}" data-content="{{ picture.content }}"  data-bs-toggle="modal"
                                data-image ="{{ asset(vich_uploader_asset(picture, 'imageFile')) }}"
                                data-bs-target="#image-gallery">
                                <img class="img-responsive col-12 py-{{padding_y}} mx-0 {{ px }}" src="{{ asset(vich_uploader_asset(picture, 'imageFile')) }}" alt="{{ 'picture' }}">            
                            </a>
                        {% endif %}
                        {% if( 'modale2' ==  section.template2.code) %}
                            <!-- Modale2  -->
                            <a style="color:{{ content_link_color }}" onmouseover="this.style.color='{{ content_link_hover_color }}'" onmouseout="this.style.color='{{ content_link_color }}'" class="portfolio-link" data-bs-toggle="modal" href="#portfolioModal{{ picture.id }}">
                                <img class="img-responsive col-12 py-{{padding_y}} mx-0 {{ px }}" src="{{ asset(vich_uploader_asset(picture, 'imageFile')) }}" alt="{{ 'picture' }}">          
                            </a>
                        {% endif %}
                    {% endif %}
		        {% endfor %}
		</div>
        {% endfor %}

        </div>
    </div>
</section>

<!-- Modale -->
{% include 'front/base/hermes/template/modale.html.twig' %}
